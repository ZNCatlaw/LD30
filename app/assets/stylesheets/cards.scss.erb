@include keyframes(fade) {
  from { opacity: 0.1; }
  to { opacity: 0.9; }
}

@include keyframes(fadeWhole) {
  from { opacity: 0; }
  to { opacity: 1; }
}

div.cardbox, div.handbox {
  display: inline-block;
  position: relative;
  overflow: hidden;

  background: rgba(0, 0, 0, 0.5);
  border: 2px outset #444;
  border-radius: 7px;
}

div.cardbox {
  width: 74px; //73.5
  height: 142px; //141.75
  margin: 2px;
  z-index: 5;

  @include mediaquery('medium') {
    width: 88px; //88.2
    height: 170px; //170.1
    margin: 3px;
  }

  @include mediaquery('large') {
    width: 118px; //117.6
    height: 227px; //226.8
    margin: 4px;
  }

  @include transform( translate3d(0, 0, 0) );
}

div.handbox {
  min-width: 150px;
  height: 142px; //141.75
  margin: auto 5px;
  z-index: 10;
  white-space: nowrap;

  &:empty{
    border-color: transparent;
  }

  @include mediaquery('medium')  {
    min-width: 178px;
    height: 170px; //170.1
    margin: auto 10px;
  }

  @include mediaquery('large') {
    min-width: 238px;
    height: 227px; //226.8
    margin: auto 15px;
  }

  div.cardbox {
    margin: 0;
    border: 0;
    border-left: 1px outset #444;
    border-radius: 7px 0 0 7px;

    margin-left: -37px;

    @include mediaquery('medium') {
      margin-left: -44px;
    }
    @include mediaquery('large') {
      margin-left: -59px;
    }

    &:first-child{
      margin-left: -1px;
    }
  }
}

#context .cardbox {
  border-color: lightblue;
  box-shadow: 0px 0px 8px 4px white;
}

#context .cardbox, #submit .cardbox{
  background-image: url(<%= asset_path('tarot/null.png') %>);
  background-size: cover;
  background-origin: top left;
}

#draw .cardbox {
  background-color: rgba(0,0,0, 0.25);
  border-color: transparent;
}

#draw .card {
  @include animation( fade 3s $ease-in-out-sine );
  @include animation-iteration-count(infinite);
  @include animation-direction(alternate);
}

#collection .cardbox {
  margin-bottom: 12px;
}

#hands .handbox .wrapper {
  @include animation( fadeWhole 1.5s $ease-in-out-sine);
}

#spread, #context {
  .card { @include animation( fadeWhole 0.5s $ease-in-out-sine); }
}

#submit .card {
  @include animation( fadeWhole 0.5s $ease-in-out-sine);
}

#spread-slot-11.cardbox, #spread-slot-20.cardbox {
  margin-left: 32px;
  margin-right: 16px;
}

#spread-slot-0.cardbox, #spread-slot-9.cardbox {
  margin-left: 16px;
  margin-right: 32px;
}

div.card {
  position: absolute;
  top: 0; bottom: 0; right: 0; left: 0; // fill parent


  @include transform-style( preserve-3d );
  @include transition( transform 1s );

  .back, .front, .cover, .null {
      position: absolute;
      top: 0; bottom: 0; right: 0; left: 0; // fill parent
      @include backface-visibility(hidden);
  }

  .front, &.front {
      background-size: cover;
      background-position: top left;
      background-repeat: no-repeat;
  }

  .back {
    background-image: url(<%= asset_path('tarot/back.png') %>) !important;
    background-position: center center;
    background-size: 225%;
    @include transform( rotateY( 180deg ) );
  }

  &.face-down {
    @include transform( rotateY( 180deg ) );
  }

  &.null {
      background-image: url(<%= asset_path('tarot/null.png') %>);
  }

  &.cover {
      background-image: url(<%= asset_path('tarot/cover.png') %>);
  }

  &.thehand {
      @include transition( opacity 1.5s $ease-in-out-sine );
      &:not(.active){ opacity: 0; }
      &.up {
        background-image: url(<%= asset_path('tarot/thehand-up.png') %>);
      }
      &.left {
        background-image: url(<%= asset_path('tarot/thehand-left.png') %>);
      }
      &.right {
        background-image: url(<%= asset_path('tarot/thehand-right.png') %>);
      }
      &.down {
        background-image: url(<%= asset_path('tarot/thehand-down.png') %>);
      }
  }

  <% 22.times do |num| %>

  &#major-<%= num %> {
    .front {
        background-image: url(<%= asset_path("tarot/major-#{num.to_s.rjust(2,'0')}.png") %>);
    }
  }

  <% end

    4.times do |suit|
      14.times do |num|
        num = num + 1
  %>

  &#minor-<%="#{suit}-#{num - 1}" %> {
    .front {
        background-image: url(<%= asset_path("tarot/minor-#{suit}-#{num.to_s.rjust(2, '0')}.png") %>);
    }
  }

  <%  end
    end %>
}

//Card interactivity

.cardbox.selected {
  box-shadow: 0px 0px 3px 3px lightblue;
  border-style: double;
  border-color: salmon !important;
  top: 10px;
}

.card.face-up {
  cursor: pointer;
}

#context .card, #spread .face-up {
  cursor: zoom-in;
}

#draw .card {
  cursor: copy;
}

#collection .card {
  cursor: cell;
}

.noninteractive .card, .card.noninteractive {
  cursor: default !important;
}

#modal .cardbox {
  @include transition( box-shadow 1s );
  &:hover{
    box-shadow: 0px 0px 32px 4px lightblue;
  }
}

#modal, #overlay {
  cursor: alias;
}

#modal .cardbox.noninteractive .card {
  cursor: zoom-out !important;
}

.cardbox.noninteractive:hover {
  box-shadow: none !important;
}
