#spread .cardbox, #context .cardbox {
  border-width: 2px;
}

#spread-slot-10.cardbox, #spread-slot-21.cardbox, #spread-slot-11.cardbox, #spread-slot-0.cardbox, #spread-slot-20.cardbox, #spread-slot-9.cardbox {
  margin-left: 16px;
  margin-right: 16px;
}

#spread-slot-15.cardbox, #spread-slot-10.cardbox, #spread-slot-4.cardbox {
  margin-top: 16px;
  margin-bottom: -1px;
}

#spread-slot-16.cardbox, #spread-slot-21.cardbox, #spread-slot-5.cardbox{
  margin-top: -1px;
  margin-bottom: 16px;
}

div.card {
  position: absolute;
  top: 0; bottom: 0; right: 0; left: 0; // fill parent


  @include transform-style( preserve-3d );
  @include transition( transform 1s );

  .back, .front, .cover, .null {
      position: absolute;
      top: 0; bottom: 0; right: 0; left: 0; // fill parent
      @include backface-visibility(hidden);
  }

  .front, &.front {
      background-size: cover;
      background-position: top left;
      background-repeat: no-repeat;
  }

  .back {
    background-image: url(<%= asset_path('tarot/back.png') %>) !important;
    background-position: center center;
    background-size: 225%;
    @include transform( rotateY( 180deg ) );
  }

  &.face-down {
    @include transform( rotateY( 180deg ) );
  }

  &.null {
      background-image: url(<%= asset_path('tarot/null.png') %>);
  }

  &.cover {
      background-image: url(<%= asset_path('tarot/cover.png') %>);
  }

  &.thehand {
      background-image: url(<%= asset_path('tarot/thehand-up.png') %>);
      &.left {
        background-image: url(<%= asset_path('tarot/thehand-left.png') %>);
      }
      &.right {
        background-image: url(<%= asset_path('tarot/thehand-right.png') %>);
      }
      &.down {
        background-image: url(<%= asset_path('tarot/thehand-down.png') %>);
      }
  }

  <% 22.times do |num| %>

  &#major-<%= num %> {
    .front {
        background-image: url(<%= asset_path("tarot/major-#{num.to_s.rjust(2,'0')}.png") %>);
    }
  }

  <% end

    4.times do |suit|
      14.times do |num|
        num = num + 1
  %>

  &#minor-<%="#{suit}-#{num - 1}" %> {
    .front {
        background-image: url(<%= asset_path("tarot/minor-#{suit}-#{num.to_s.rjust(2, '0')}.png") %>);
    }
  }

  <%  end
    end %>
}

//Card interactivity

.face-up, .thehand {
  cursor: pointer;
}

#modal .cardbox:hover{
  box-shadow: 0px 0px 24px 6px lightblue;
}
