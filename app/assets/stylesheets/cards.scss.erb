div.cardbox, div.handbox {
  display: inline-block;
  position: relative;
  overflow: hidden;

  background: rgba(0, 0, 0, 0.5);

  border: 1px outset #444;
  border-radius: 7px;
}

div.cardbox {
  width: 74px; //73.5
  height: 142px; //141.75
  margin: 3px;
  z-index: 5;

  @include mediaquery('medium') {
    width: 88px; //88.2
    height: 170px; //170.1
    margin: 4px;
  }

  @include mediaquery('large') {
    width: 118px; //117.6
    height: 227px; //226.8
    margin: 5px;
  }

  @include transform( translate3d(0, 0, 0) );

  perspective: 800px;
}

div.handbox {
  min-width: 150px;
  height: 142px; //141.75
  margin: 3px;
  z-index: 10;
  white-space: nowrap;

  @include mediaquery('medium')  {
    min-width: 178px;
    height: 170px; //170.1
    margin: 4px;
  }

  @include mediaquery('large') {
    min-width: 238px;
    height: 227px; //226.8
    margin: 5px;
  }

  > div.cardbox {
    display: inline-block;
    margin: 0;
    border: 0;
    border-left: 1px outset #444;
    border-radius: 7px 0 0 7px;

    margin-left: -37px;

    @include mediaquery('medium') {
      margin-left: -44px;
    }
    @include mediaquery('large') {
      margin-left: -59px;
    }

    &:first-child{
      margin-left: -1px;
    }
  }
}

div.card {
  position: absolute;
  top: 0; bottom: 0; right: 0; left: 0; // fill parent

  transform-style: preserve-3d;
  transition: transform 1s;

  .back, .front, .cover, .null {
      position: absolute;
      top: 0; bottom: 0; right: 0; left: 0; // fill parent
      backface-visibility: hidden;
  }

  .front {
      background-size: cover;
      background-position: top left;
      background-repeat: no-repeat;
  }

  .back {
    background-image: url(<%= asset_path('tarot/back.png') %>) !important;
    background-position: center center;
    background-size: 225%;
    transform: rotateY( 180deg );
  }

  &.face-down {
    transform: rotateY( 180deg );
  }

  &.null {
      background-image: url(<%= asset_path('tarot/null.png') %>);
  }

  &.cover {
      background-image: url(<%= asset_path('tarot/cover.png') %>);
      background-size: cover;
      background-position: top left;
      background-repeat: no-repeat;
  }

  <% 22.times do |num| %>

  &#major-<%= num %> {
    .front {
        background-image: url(<%= asset_path("tarot/major-#{num.to_s.rjust(2,'0')}.png") %>);
    }
  }

  <% end

    4.times do |suit|
      14.times do |num|
      num = num + 1
  %>

  &#minor-<%="#{suit}-#{num}" %> {
    .front {
        background-image: url(<%= asset_path("tarot/minor-#{suit}-#{num.to_s.rjust(2, '0')}.png") %>);
    }
  }

  <%  end
    end %>
}
